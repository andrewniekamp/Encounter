@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_GameLayout.cshtml";
}
@using Encounter.ViewModels

@model LoginViewModel

<div class="bg-image">
    <div class="landing-menu">
        <h1 class="encounter-banner">Encounter</h1>
        <h2>Log In</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "Username" })

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", placeholder = "Password" })

            <input type="submit" value="Log in" class="btn btn-success" />
        }
    </div>
</div>
